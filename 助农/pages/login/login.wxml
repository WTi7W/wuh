<view class="container">
  <view class="form">
    <input placeholder="用户名" value="{{username}}" bindinput="onUsernameInput" />
    <input placeholder="密码" value="{{password}}" password bindinput="onPasswordInput" />
    <button bindtap="onSubmit">{{isRegister ? '注册' : '登录'}}</button>
    <text bindtap="switchMode" style="color: #07c160; margin-top: 20rpx; display: block; text-align: center;">
      {{isRegister ? '已有账号？去登录' : '没有账号？去注册'}}
    </text>
  </view>
</view>